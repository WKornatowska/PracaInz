<UserControl x:Class="DietApp.UserControlFoodPlan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DietApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

        <ScrollViewer HorizontalScrollBarVisibility="Hidden" Margin="0,10,0,-50" Height="520" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Height="2400">
                <Grid x:Name="GridGenerateFoodPlan"  Width="630" Margin="103,0,28.2,0.2" Height="80">

                    <Button Grid.Row="11" x:Name="GenerateButton" HorizontalAlignment="Left" Height="40" Width="200"  Content="Generuj plan żywieniowy" Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="GenerateButton_Click" />

                </Grid>
                <Grid x:Name="GridFoodPlan"  Width="630" Margin="103,0,28.2,0.2" Height="2400"/>



            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
